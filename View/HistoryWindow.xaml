<Window x:Class="Blum_Blum_Shub_project.View.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История" Height="520" Width="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="История действий" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>

                <DataGrid x:Name="GridHistory" Grid.Row="1"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          Background="White" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" Binding="{Binding CreatedAt}" Width="170"/>
                        <DataGridTextColumn Header="Действие" Binding="{Binding Action}" Width="140"/>
                        <DataGridTextColumn Header="Инфо" Binding="{Binding Info}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Content="Очистить" Width="120" Click="Clear_Click"/>
                    <Button Content="Закрыть" Width="120" Margin="10,0,0,0"
                            Style="{StaticResource SecondaryButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>