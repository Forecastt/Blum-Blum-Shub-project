<Window x:Class="Blum_Blum_Shub_project.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="460" Width="520"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="24">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Регистрация"
                           FontSize="22" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="1"
                           Text="Создайте учетную запись для работы с генератором."
                           Foreground="{StaticResource MutedBrush}"
                           Margin="0,8,0,18"/>

                <StackPanel Grid.Row="2" VerticalAlignment="Top">
                    <TextBlock Text="Логин" Margin="0,0,0,6"/>
                    <TextBox x:Name="LoginBox" Margin="0,0,0,14"/>

                    <TextBlock Text="Пароль" Margin="0,0,0,6"/>
                    <PasswordBox x:Name="PasswordBox" Margin="0,0,0,6"/>

                    <TextBlock Text="Пароль: минимум 6 символов, буква и цифра."
                               Foreground="{StaticResource MutedBrush}"
                               FontSize="12" Margin="0,0,0,12"/>

                    <TextBlock x:Name="StatusText"
           Foreground="Crimson"
           TextWrapping="Wrap"
           MinHeight="22"
           Margin="0,4,0,0"/>
                </StackPanel>

                <Grid Grid.Row="3" Margin="0,18,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Создать" Grid.Column="0" Margin="0,0,10,0" Click="Create_Click"/>
                    <Button Content="Назад" Grid.Column="1" Margin="0,0,10,0"
                            Style="{StaticResource SecondaryButton}" Click="Back_Click"/>
                    <Button Content="Выход" Grid.Column="2"
                            Style="{StaticResource SecondaryButton}" Click="Exit_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>